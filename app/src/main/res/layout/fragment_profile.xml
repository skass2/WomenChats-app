<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:paddingHorizontal="24dp"
    android:paddingVertical="32dp">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Avatar với nút edit góc -->
        <FrameLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="8dp"
            android:elevation="6dp">

            <ImageView
                android:id="@+id/imgAvatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_person"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_background"
                android:elevation="6dp" />

            <!-- Nút sửa avatar (floating style) -->
            <ImageButton
                android:id="@+id/btnChangeAvatar"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_gravity="bottom|end"
                android:layout_margin="8dp"
                android:background="@drawable/bg_fab_button"
                android:src="@drawable/ic_edit"
                android:contentDescription="Sửa avatar"
                android:elevation="8dp"
                app:tint="@android:color/white" />
        </FrameLayout>

        <!-- Loading -->
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:visibility="gone" />

        <!-- Name -->
        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên hiển thị"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="@color/textPrimary"
            android:layout_marginTop="18dp" />

        <!-- Email -->
        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="email@gmail.com"
            android:textSize="15sp"
            android:textColor="@color/textSecondary"
            android:layout_marginTop="4dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#22000000"
            android:layout_marginVertical="24dp" />

        <!-- Nút đổi tên -->
        <Button
            android:id="@+id/btnChangeName"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Đổi tên hiển thị"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:background="@drawable/bg_button_primary"
            app:backgroundTint="@null"
            android:textColor="@android:color/white"
            android:elevation="4dp" />

        <!-- Nút đổi mật khẩu -->
        <Button
            android:id="@+id/btnChangePassword"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Đổi mật khẩu"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_button_yellow"
            app:backgroundTint="@null"
            android:textColor="@android:color/white"
            android:elevation="4dp" />

        <!-- Nút đăng xuất -->
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Đăng xuất"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_button_red"
            app:backgroundTint="@null"
            android:textColor="@android:color/white"
            android:elevation="4dp" />
    </LinearLayout>
</ScrollView>
